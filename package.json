{
  "name": "pbtsdb",
  "version": "0.2.0",
  "description": "Type-safe PocketBase integration with TanStack Query and TanStack DB",
  "keywords": [
    "pocketbase",
    "tanstack",
    "tanstack-query",
    "tanstack-db",
    "database",
    "react",
    "typescript",
    "real-time",
    "subscriptions",
    "backend-as-a-service"
  ],
  "license": "MIT",
  "author": "Nathan Stitt <nathan@stitt.org>",
  "repository": {
    "type": "git",
    "url": "https://github.com/nathanstitt/pbtsdb.git"
  },
  "bugs": {
    "url": "https://github.com/nathanstitt/pbtsdb/issues"
  },
  "homepage": "https://github.com/nathanstitt/pbtsdb#readme",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "llms.txt",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "prepublishOnly": "npm run checks && npm test && npm run build",
    "db:reset": "rm -rf ./pb_data && pocketbase migrate up",
    "checks": "run-p typecheck lint",
    "lint": "biome check .",
    "lint:fix": "biome check . --write",
    "typecheck": "tsc  --noEmit --skipLibCheck",
    "test": "start-server-and-test test:server http://127.0.0.1:8210/api/health 'vitest $TEST'",
    "test:run": "vitest",
    "test:server": "./scripts/start-test-server.sh",
    "test:server:migrate": "pocketbase migrate --dir ./pb_data"
  },
  "peerDependencies": {
    "@tanstack/query-db-collection": ">=1.0.0",
    "@tanstack/react-db": ">=0.1.0",
    "@tanstack/react-query": ">=5.0.0",
    "pocketbase": ">=0.21.0",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@tanstack/query-db-collection": ">=1.0.21",
    "@tanstack/react-db": ">=0.1.68",
    "@tanstack/react-query": ">=5.90.20",
    "@testing-library/react": ">=16.3.2",
    "@types/node": ">=25.0.10",
    "@types/react": ">=19.2.10",
    "biome": ">=0.3.3",
    "dotenv": ">=17.2.3",
    "eventsource": ">=4.1.0",
    "jsdom": ">=27.4.0",
    "npm-run-all": ">=4.1.5",
    "pocketbase": ">=0.26.7",
    "react": ">=19.2.4",
    "react-dom": ">=19.2.4",
    "start-server-and-test": ">=2.1.3",
    "tsup": "^8.5.1",
    "tsx": ">=4.21.0",
    "typescript": ">=5.9.3",
    "vitest": ">=4.0.18"
  }
}
